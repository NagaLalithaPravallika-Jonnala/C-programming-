//perimeter of the rectangle
#include<stdio.h>
#include<math.h>
int main()
{
    int l,b,perimeter;
    printf("enter the length of the rectangle l:\n");
    scanf("%d",&l);
    printf("enter the breath of the rectangle b:\n");
    scanf("%d",&b);
    perimeter = 2 * ( l + b);
    printf("the perimeter of the rectangle is: %d\n", perimeter);
    return 0;
}
